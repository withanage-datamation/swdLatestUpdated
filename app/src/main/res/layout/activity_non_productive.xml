<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/np_toolbar"
        layout="@layout/toolbar"/>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/np_tab_strip"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/np_toolbar"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/np_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/np_tab_strip"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawer_semi_trans_bg"
        android:clickable="true"
        android:visibility="gone"/>

</RelativeLayout>