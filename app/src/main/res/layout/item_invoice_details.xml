    <TextView
        android:id="@+id/item_invoice_details_tv_invoice_gross"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_market_return"
        android:text="10,000.00"
        android:gravity="end|center_vertical"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/item_invoice_details_tv_invoice_market_return"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_discount"
        android:text="10,000.00"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="end|center_vertical"/>

    <TextView
        android:id="@+id/item_invoice_details_tv_invoice_discount"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_net"
        android:text="10,000.00"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:paddingRight="5dp"
        android:gravity="end|center_vertical"/>

    <TextView
        android:id="@+id/item_invoice_details_tv_invoice_net"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_outstanding"
        android:text="8,000.00"
        android:gravity="end|center_vertical"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/item_invoice_details_tv_invoice_outstanding"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/item_invoice_details_cb_free_issue"
        android:text="8,000.00"
        android:gravity="end|center_vertical"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <ImageView
        android:id="@+id/item_invoice_details_cb_free_issue"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:alpha="0.5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/done"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/item_invoice_details_cb_free_issue_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/invoice_has_free_indicator"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:layout_below="@+id/item_invoice_details_tv_invoice_id"
        android:visibility="gone"/>

</RelativeLayout>