    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/fragment_invoice_details_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_invoice_details_rl_header"
        android:layout_above="@+id/fragment_invoice_details_rl_totals"
        android:clipToPadding="false"
        android:paddingBottom="50dp" />

    <RelativeLayout
        android:id="@+id/fragment_invoice_details_rl_totals"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_gross_total"
            android:gravity="center_vertical|end"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="0.00"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_gross_total"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_market_return_total"
            android:gravity="center_vertical|end"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="0.00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_market_return_total"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_discount_total"
            android:gravity="center_vertical|end"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="0.00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_discount_total"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_net_total"
            android:gravity="center_vertical|end"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="0.00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_net_total"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_outstanding_total"
            android:gravity="center_vertical|end"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="0.00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_outstanding_total"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_free_total"
            android:gravity="center_vertical|end"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="0.00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_free_total"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="0.00"
            android:textSize="12sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_invoice_details_rl_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_gross"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="RefNo"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_gross"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_market_return"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Gross"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_market_return"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_dealer"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Return"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_dealer"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_net"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Discount"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_net"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_qty"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Net"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_qty"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/item_invoice_details_tv_invoice_debcode"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Qty"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_invoice_details_tv_invoice_debcode"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Debtor"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>