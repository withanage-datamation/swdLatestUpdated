<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <com.datamation.swdsfa.utils.CustomFont
        android:id="@+id/tv_free_qty"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_weight=".9"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="18dp" />

    <com.datamation.swdsfa.utils.CustomFont
        android:visibility="gone"
        android:id="@+id/tv_free_issue_item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight=".9"
        android:textColor="@color/greenColor"
        android:textSize="14dp"
        />
    <ListView
        android:id="@+id/lv_free_issue_items"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_view_diveder"
        android:dividerHeight="1dp"
        android:layout_marginBottom="10dp"
        android:layout_weight=".2">

    </ListView>
    <com.datamation.swdsfa.utils.CustomFont
        android:id="@+id/tv_free_issued_item_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight=".9"
        android:textColor="@color/greenColor"
        android:textSize="14dp"/>
    <ListView
        android:id="@+id/lv_free_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:divider="@color/list_view_diveder"
        android:dividerHeight="1dp"
        android:layout_marginBottom="10dp"
        android:layout_weight=".2">

    </ListView>
</LinearLayout>