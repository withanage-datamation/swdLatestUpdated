<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:orientation="horizontal">

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="QOH STATUS"
                    android:textColor="@color/greenColor"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spnQOH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:orientation="horizontal">

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="TRANSACTION TYPE"
                    android:textColor="@color/greenColor"
                    android:textSize="18sp"
                    />
                <Spinner
                    android:id="@+id/spnTxn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="1dp"
                    android:orientation="horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reason_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:orientation="horizontal">
                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="REASON"
                    android:textColor="@color/greenColor"
                    android:textSize="18sp"
                    />
                <Spinner
                    android:id="@+id/spnReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="1dp"
                    android:orientation="horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="1dp"
                android:orientation="horizontal">

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_textbox"
                    android:text="PRODUCTS"
                    android:textColor="@color/greenColor"
                    android:textSize="18sp"
                    />

                <ImageButton
                    android:id="@+id/ibtProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/product" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dip"
                    android:layout_weight="2.5"
                    android:background="@drawable/custom_label"
                    android:gravity="center"
                    android:text="PRODUCT"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/unselected"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/custom_label"
                    android:gravity="center"
                    android:text="CASES"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/unselected"
                    android:textSize="14sp"
                    />
                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/custom_label"
                    android:gravity="center"
                    android:text="PIECES"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/unselected"
                    android:textSize="14sp"
                    />
                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_label"
                    android:gravity="center"
                    android:text="AMOUNT"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/unselected"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <ListView
                android:id="@+id/lvProducts_pre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:background="@drawable/custom_textbox"
                android:divider="@color/list_view_diveder"
                android:dividerHeight="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/custom_textbox"
                    android:text="FREE ISSUES"
                    android:textColor="@color/greenColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ibtDisc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="FREE"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:background="@color/theme_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/custom_label"
                    android:gravity="center"
                    android:text="CODE"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/unselected"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dip"
                    android:layout_weight="3"
                    android:background="@drawable/custom_label"
                    android:gravity="center"
                    android:text="PRODUCT"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/unselected"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.datamation.swdsfa.utils.CustomFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/custom_label"
                    android:gravity="center"
                    android:text="QTY"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/unselected"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ListView
                android:id="@+id/lvFreeIssue_Inv"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="1dp"
                android:divider="@color/list_view_diveder"
                android:dividerHeight="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_textbox" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


