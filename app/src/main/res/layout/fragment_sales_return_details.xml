<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_marginTop="15dp"
                        android:padding="@dimen/finac_medium_edit_text_top_margin"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true">

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="RETURN TYPE"
                            android:layout_marginLeft="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/finac_medium_text_size" />

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=":-"
                            android:textSize="@dimen/finac_medium_text_size"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/spinner_return_Type"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tour_spinner_height"
                            android:layout_weight="1"
                            android:background="@drawable/custom_textbox"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/tour_spinner_text_size">

                        </Spinner>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="@dimen/finac_medium_margin"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true">

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="PRODUCT"
                            android:layout_marginLeft="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/finac_medium_text_size" />

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=":-"
                            android:textSize="@dimen/finac_medium_text_size"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_item"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:editable="false"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/finac_medium_edit_text_size"></EditText>

                        <Button
                            android:id="@+id/btn_item_search"
                            android:layout_width="@dimen/finac_medium_image_width"
                            android:layout_height="@dimen/finac_medium_image_width"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/search_button" />
                    </TableRow>

                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true">

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="UNITS        "
                            android:layout_marginLeft="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/finac_medium_text_size" />

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=":-"
                            android:textSize="@dimen/finac_medium_text_size"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/tv_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:editable="false"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/finac_medium_edit_text_size"/>

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="PRICE   "
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/finac_medium_text_size" />

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=":-"
                            android:textSize="@dimen/finac_medium_text_size"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="right"
                            android:text="0.00"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/finac_medium_edit_text_size" />

                    </TableRow>

                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:paddingTop="@dimen/finac_small_margin">

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="QTY           "
                            android:layout_marginLeft="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/finac_medium_text_size" />

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=":-"
                            android:textSize="@dimen/finac_medium_text_size"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_pieces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="@dimen/finac_medium_edit_text_size">

                        </EditText>

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="DISC   "
                            android:layout_marginLeft="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/finac_medium_text_size" />

                        <com.datamation.swdsfa.utils.CustomFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=":-"
                            android:textSize="@dimen/finac_medium_text_size"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_TotalDisc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="@dimen/finac_medium_edit_text_size"></EditText>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/finac_medium_top_margin"
                        android:gravity="center"
                        android:paddingBottom="@dimen/finac_small_margin"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/btn_add"
                            android:background="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/finac_large_image_height"
                            android:textColor="@color/unselected"
                            android:layout_marginLeft="@dimen/finac_medium_top_margin"
                            android:layout_marginRight="@dimen/finac_medium_top_margin"
                            android:padding="@dimen/finac_medium_margin"
                            android:text="ADD"
                            android:textSize="@dimen/toolbar_text_size" />

                        <Button
                            android:id="@+id/btn_free"
                            style="@style/btnStyleBeige"
                            android:layout_width="140dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:text="FREE / DISC"
                            android:visibility="gone" />
                    </TableRow>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/finac_medium_margin"
            android:padding="10dp"
            android:background="@color/unselected"
            android:orientation="horizontal">

            <com.datamation.swdsfa.utils.CustomFont
                android:layout_width="0dp"
                android:layout_height="@dimen/finac_medium_textview_height"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="3"
                android:background="@drawable/custom_label"
                android:gravity="center"
                android:text="PRODUCT"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/unselected"
                android:textSize="@dimen/finac_extra_medium_text_size"
                android:textStyle="bold" />

            <com.datamation.swdsfa.utils.CustomFont
                android:layout_width="0dp"
                android:layout_height="@dimen/finac_medium_textview_height"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:background="@drawable/custom_label"
                android:gravity="center"
                android:text="QTY"
                android:textColor="@color/unselected"
                android:textSize="@dimen/finac_extra_medium_text_size"
                android:textStyle="bold" />

            <com.datamation.swdsfa.utils.CustomFont
                android:layout_width="0dp"
                android:layout_height="@dimen/finac_medium_textview_height"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1.5"
                android:background="@drawable/custom_label"
                android:gravity="center"
                android:text="REASON"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/unselected"
                android:textSize="@dimen/finac_extra_medium_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_return_det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/list_view_diveder"
            android:dividerHeight="2dp"
            android:layout_marginTop="10dp">

        </ListView>

</LinearLayout>