<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_payment_details_tv_invoice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_payment_details_tv_gross_amount"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:maxLines="3"
        android:gravity="center"
        android:text="Payment Ref"/>

    <TextView
        android:id="@+id/item_payment_details_tv_gross_amount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_payment_details_tv_net_amount"
        android:textSize="12sp"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="Invoice Ref"/>

    <TextView
        android:id="@+id/item_payment_details_tv_net_amount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_payment_details_tv_outstanding_amount"
        android:textSize="12sp"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="Net"/>

    <TextView
        android:id="@+id/item_payment_details_tv_outstanding_amount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_payment_details_tv_cash_amount"
        android:textSize="12sp"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="Outstanding"/>

    <TextView
        android:id="@+id/item_payment_details_tv_cash_amount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_payment_details_tv_cheque_amount"
        android:textSize="12sp"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="Cash"/>

    <TextView
        android:id="@+id/item_payment_details_tv_cheque_amount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:gravity="center_vertical|end"
        android:singleLine="true"
        android:text="Cheque"
        android:paddingRight="15dp"/>

</RelativeLayout>