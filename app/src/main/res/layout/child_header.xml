<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/sale_item"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textColor="@color/theme_color_dark"
            android:layout_weight = "0.5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/free_item"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:maxLines="3"
            android:gravity="left"
            android:text="Sale Item"/>
        <TextView
            android:id="@+id/free_item"
            android:textColor="@color/theme_color_dark"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight = "0.5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/from_qty"
            android:textStyle="bold"
            android:textSize="13sp"
            android:maxLines="3"
            android:gravity="left"
            android:text="Free Item"/>
        <TextView
            android:id="@+id/from_qty"
            android:layout_width="50dp"
            android:textColor="@color/theme_color_dark"
            android:layout_weight = "0.25"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/to_qty"
            android:textSize="14sp"
            android:gravity="center"
            android:singleLine="true"
            android:text="From Qty"/>
        <TextView
            android:id="@+id/to_qty"
            android:layout_width="50dp"
            android:textColor="@color/theme_color_dark"
            android:layout_weight = "0.25"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_qty"
            android:textSize="14sp"
            android:gravity="center"
            android:singleLine="true"
            android:text="To Qty"/>
        <TextView
            android:id="@+id/item_qty"
            android:textColor="@color/theme_color_dark"
            android:layout_weight = "0.25"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/free_qty"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Item Qty"/>
        <TextView
            android:id="@+id/free_qty"
            android:layout_width="50dp"
            android:textColor="@color/theme_color_dark"
            android:layout_weight = "0.25"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/status"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="Free Qty"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="2"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/sale_item0"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_weight = "0.5"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/free_item"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:maxLines="3"
        android:gravity="left"
        android:text="Sale Item"/>
    <TextView
        android:id="@+id/free_item0"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight = "0.5"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/from_qty"
        android:textStyle="bold"
        android:textSize="13sp"
        android:maxLines="3"
        android:gravity="left"
        android:text="Free Item"/>
    <TextView
        android:id="@+id/from_qty0"
        android:layout_width="50dp"
        android:layout_weight = "0.25"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/to_qty"
        android:textSize="14sp"
        android:gravity="center"
        android:singleLine="true"
        android:text="From Qty"/>
    <TextView
        android:id="@+id/to_qty0"
        android:layout_width="50dp"
        android:layout_weight = "0.25"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_qty"
        android:textSize="14sp"
        android:gravity="center"
        android:singleLine="true"
        android:text="To Qty"/>
    <TextView
        android:id="@+id/item_qty0"
        android:layout_weight = "0.25"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/free_qty"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Item Qty"/>
    <TextView
        android:id="@+id/free_qty0"
        android:layout_width="50dp"
        android:layout_weight = "0.25"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/status"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:text="Free Qty"/>
</LinearLayout>

</LinearLayout>