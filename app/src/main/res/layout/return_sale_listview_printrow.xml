<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/printindex"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="1"
            android:textColor="#040d19"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/printitemname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="Item name"
            android:textColor="#040d19"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/printPreType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TYPE"
            android:textColor="#040d19"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/printPreMRP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="MRP"
            android:textColor="#040d19"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/printPreDisc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Disc"
            android:textColor="#040d19"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/printpiecesQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Qty"
            android:textColor="#040d19"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/printamount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Amount"
            android:textColor="#040d19"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>