<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:background="@color/gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:ellipsize="start"
                android:gravity="start|center"
                android:text="ITEM NAME"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <ImageView
                android:contentDescription="border"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tvQty1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"
                        android:contentDescription="border" />

                    <TextView
                        android:id="@+id/tvVal1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00.00"
                        android:gravity="right|center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:contentDescription="border"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvQty2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <ImageView
                        android:contentDescription="border"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tvVal2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00.00"
                        android:gravity="right|center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:contentDescription="border"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvQty3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <ImageView
                        android:contentDescription="border"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tvVal3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00.00"
                        android:gravity="right|center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:contentDescription="border"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSummaryQty"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <ImageView
                        android:contentDescription="border"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tvSummaryVal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="00.00"
                        android:gravity="right|center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>