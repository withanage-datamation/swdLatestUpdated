<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="5">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/et_all_deb_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_textbox"
            app:iconifiedByDefault="true"
            app:queryHint="Type you keyword here..."
            android:layout_weight="2.5"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="View Near Dealers ->"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/sweet_dialog_bg_color_dark"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_marginLeft="5dp"/>

        <Switch
            android:id="@+id/gps_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:checked="false"
            android:gravity="end"
            android:scaleY="1.25"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/all_cus_lv"
            android:divider="@color/list_view_diveder"
            android:dividerHeight="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

        </ListView>

    </LinearLayout>

</LinearLayout>